.verify-container {
  padding: 0 20rpx;
}

.verify-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.08);
  overflow: hidden;
}

.card-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #e4e7ed;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #303133;
}

.card-body {
  padding: 40rpx 30rpx;
}

.input-group {
  display: flex;
  align-items: center;
  border: 2rpx solid #dcdfe6;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  background: #f5f7fa;
}

.input-icon {
  margin-right: 20rpx;
}

.verify-input {
  flex: 1;
  font-size: 32rpx;
}

.verify-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
}

/* 结果卡片 */
.result-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.08);
  overflow: hidden;
  border: 4rpx solid transparent;
}

.result-card.success {
  border-color: #67c23a;
}

.result-card.failed {
  border-color: #f56c6c;
}

.result-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f5f7fa;
  border-bottom: 2rpx solid #e4e7ed;
}

.result-message {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.product-info {
  padding: 30rpx;
}

.info-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #303133;
}

.info-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #e4e7ed;
}

.info-label {
  font-size: 28rpx;
  color: #909399;
  width: 180rpx;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #303133;
}

.verify-info {
  margin-top: 40rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-tag {
  background: #f4f4f5;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #909399;
  margin-left: 20rpx;
}

.warning-box {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fdf6ec;
  border-radius: 12rpx;
  margin-top: 30rpx;
}

.warning-text {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #e6a23c;
}

/* 历史卡片 */
.history-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.08);
  padding: 30rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.history-tip {
  display: block;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #909399;
}